{
  "manifest_version": 2,
  "name": "CleanCalc",
  "version": "0.1.1",
  "description": "Clean, minimal Firefox popup calculator with dual themes, history, percent and keyboard support.",
  "browser_action": {
    "default_title": "CleanCalc",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"]
}